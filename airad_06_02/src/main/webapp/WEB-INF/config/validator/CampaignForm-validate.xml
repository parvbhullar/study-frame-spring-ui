<?xml version="1.0" encoding="UTF-8"?>
<form className="com.mitian.airad.web.form.CampaignForm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="validate-schema.xsd">
    <fields>
        <fieldRule name="campaign.campaignName">
            <pattern validator="required">
                <errorTipZH>请填写名称。</errorTipZH>
            </pattern>
            <range type="length" min="0" max="50">
                <errorTipZH>活动名称最大长度为50。</errorTipZH>
            </range>
        </fieldRule>
        <fieldRule name="startTime">
            <pattern validator="required">
                <errorTipZH>请填写开始时间。</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="buggetDay">
            <pattern validator="required">
                <errorTipZH>请填写每日预算。</errorTipZH>
            </pattern>
            <pattern validator="integer">
                <errorTipZH>每日预算必须为整数。</errorTipZH>
            </pattern>
            <range type="length" min="0" max="10">
                <errorTipZH>每日预算最大长度为10。</errorTipZH>
            </range>
        </fieldRule>
        <fieldRule name="campaign.campaignState">
            <range type="length" min="0" max="200">
                <errorTipZH>活动描述最大长度为200。</errorTipZH>
            </range>
        </fieldRule>
    </fields>
    <actions>
        <xcase name="doAdd">
            <field name="campaign.campaignName" />
            <field name="startTime" />
            <field name="buggetDay" />
            <field name="campaign.campaignState" />
        </xcase>
        <xcase name="doUpdate">
            <field name="campaign.campaignName" />
            <field name="startTime" />
            <field name="buggetDay" />
            <field name="campaign.campaignState" />
        </xcase>
    </actions>
</form>