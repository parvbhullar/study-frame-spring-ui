<?xml version="1.0" encoding="UTF-8"?>
<form className="com.mitian.airad.web.form.AccountForm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="validate-schema.xsd">
    <fields>
        <fieldRule name="coreAccountInfo.accType">
            <pattern validator="required">
                <errorTipZH>账户类型必须填写</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="coreAccountInfo.securityProblem">
            <pattern validator="required">
                <errorTipZH>密码提示问题必须填写</errorTipZH>
            </pattern>
      <pattern validator="password">
                <errorTipZH>密码至少要6位,最多20位！(密码只能包含A-Z，a-z，0-9，连字符-)</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="coreAccountInfo.securityAnswer">
            <pattern validator="required">
                <errorTipZH>密码提示问题的答案必须填写</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="coreAccountInfo.password">
            <pattern validator="required">
                <errorTipZH>请填写安全密码</errorTipZH>
            </pattern>
            <range type="length" min="6" max="20">
              <errorTipZH>安全密码有效位数为六到二十位</errorTipZH>
            </range>
        </fieldRule>
        <fieldRule name="coreAccountInfo.idCard">
            <pattern validator="required">
                <errorTipZH>请填写身份证号码</errorTipZH>
            </pattern>
            <pattern validator="idcode">
                <errorTipZH>身份证号码不合法</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="coreAccountInfo.realName">
            <pattern validator="required">
                <errorTipZH>请填写真实姓名</errorTipZH>
            </pattern>
                          
            <range type="length" min="0" max="30">
                <errorTipZH>真实姓名填写不对</errorTipZH>
            </range>
        </fieldRule>
        <fieldRule name="coreAccountInfo.openingBank">
            <pattern validator="required">
                <errorTipZH>请填写开户行名称</errorTipZH>
            </pattern>
            <range type="length" min="0" max="90">
                <errorTipZH>开户行名称填写不对</errorTipZH>
            </range>
        </fieldRule>
        <fieldRule name="coreAccountInfo.unionpayId">
            <pattern validator="required">
                <errorTipZH>请填写开户行账号</errorTipZH>
            </pattern>
           <pattern validator="integer1">
                <errorTipZH>开户行账号必须填数字</errorTipZH>
           </pattern>
            <range type="length" min="15" max="26">
                <errorTipZH>开户行账号填写不对</errorTipZH>
            </range>
        </fieldRule>

        <fieldRule name="mail">
            <pattern validator="required">
                <errorTipZH>请填写邮箱</errorTipZH>
            </pattern>
            <pattern validator="email">
                <errorTipZH>邮箱格式输入错误</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="oldPassword">
            <pattern validator="required">
                <errorTipZH>请填写旧密码</errorTipZH>
            </pattern>
             <range type="length" min="0" max="30">
                <errorTipZH>旧密码填写错误</errorTipZH>
            </range>
            <pattern validator="password">
                <errorTipZH>旧密码至少要6位,最多20位!(密码只能包含A-Z，a-z，0-9，连字符-)</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="newPassword">
            <pattern validator="required">
                <errorTipZH>请填写新密码</errorTipZH>
            </pattern>
      <pattern validator="password">
                <errorTipZH>新密码至少要6位,最多20位!(密码只能包含A-Z，a-z，0-9，连字符-)</errorTipZH>
            </pattern>
           
        </fieldRule>
        <fieldRule name="confirmPassword">
            <pattern validator="required">
                <errorTipZH>请填写确认新密码</errorTipZH>
            </pattern>
            <pattern validator="password">
                <errorTipZH>确认密码至少要6位,最多20位！(密码只能包含A-Z，a-z，0-9，连字符-)</errorTipZH>
            </pattern>
        </fieldRule>
        
        
    </fields>
    <actions><!--
        <xcase name="doRetrieveAccountPassword">
            <field name="mail" />
        </xcase>
        --><xcase name="doUpdateAccountPassword">
            <field name="oldPassword" />
            <field name="newPassword" />
            <field name="confirmPassword" />
        </xcase>
        <xcase name="doEmailUpdateAccountPassword">
            <field name="newPassword" />
            <field name="confirmPassword" />
        </xcase>
        <xcase name="doResettingAccountPassword">
            <field name="newPassword" />
            <field name="confirmPassword" />
        </xcase>
        <xcase name="doUpdateMemberAccountInfo">
            <field name="coreAccountInfo.accType" />
            <field name="coreAccountInfo.password" />
            <field name="coreAccountInfo.idCard" />
            <field name="coreAccountInfo.realName" />
            <field name="coreAccountInfo.openingBank" />
            <field name="coreAccountInfo.unionpayId" />
            
        </xcase>
    </actions>
</form>