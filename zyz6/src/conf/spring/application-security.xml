<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.0.xsd">

	 <http auto-config='true' use-expressions="true">
	 	<form-login login-page="/manage/login.jsp"
	 		login-processing-url="/manage/j_spring_security_check"
	 		authentication-failure-url="/manage/login.jsp?error=1"
	 		default-target-url="/manage/index.jsp" />
	 	<!-- 
	 		<intercept-url pattern="/manage/login.jsp*" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
	 		<intercept-url pattern="/manage/common/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
	 		<intercept-url pattern="/manage/images/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
	 		<intercept-url pattern="/manage/javascript/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
	 		<intercept-url pattern="/manage/**" access="ROLE_USER" />
	 	-->
	 	<session-management>
	 		<concurrency-control max-sessions="5"
	 			expired-url="/manage/common/expired.jsp"
	 			error-if-maximum-exceeded="true" />
	 	</session-management>
	 	<logout logout-url="/manage/j_spring_security_logout"
	 		logout-success-url="/manage/login.jsp" invalidate-session="true" />
	 	<access-denied-handler
	 		error-page="/manage/common/accessDenied.jsp" />
	 	<anonymous username="anonymous" key="liuyang"
	 		granted-authority="ROLE_ANONYMOUS" enabled="true" />
	 	<custom-filter ref="customFilterSecurityInterceptor"
	 		before="FILTER_SECURITY_INTERCEPTOR" />
	 	<custom-filter ref="switchUserProcessingFilter"
	 		position="SWITCH_USER_FILTER" />
	 </http>

	 <!-- 
  	<authentication-manager>
    	<authentication-provider>
      		<user-service>
        		<user name="admin" password="admin" authorities="ROLE_USER, ROLE_ADMIN" />
        		<user name="user" password="user" authorities="ROLE_USER" />
      		</user-service>
    	</authentication-provider>
  	</authentication-manager> 
  	-->
  	
  	<beans:bean id="customFilterSecurityInterceptor" class="com.linkage.framework.security.CustomFilterSecurityInterceptor">
  		<beans:property name="authenticationManager" ref="authenticationManager" />
  		<beans:property name="accessDecisionManager" ref="customAccessDecisionManager" />
        <beans:property name="securityMetadataSource" ref="customFilterInvocationSecurityMetadataSource" />
    </beans:bean>
  	
	<authentication-manager alias="authenticationManager">
    	<authentication-provider user-service-ref="customUserDetailsService"/>
  	</authentication-manager>
  	
    <beans:bean id="customAccessDecisionManager" class="com.linkage.framework.security.CustomAccessDecisionManager">
    </beans:bean>
    
    <beans:bean id="customUserDetailsService" class="com.linkage.framework.security.CustomUserDetailsService">
    	<beans:property name="purviesDao" ref="purviesDao" />
    </beans:bean>

    <beans:bean id="customFilterInvocationSecurityMetadataSource" class="com.linkage.framework.security.CustomJdbcFilterInvocationSecurityMetadataSource">
    	<beans:property name="purviesDao" ref="purviesDao" />
    </beans:bean>
    
    <beans:bean id="switchUserProcessingFilter" class="org.springframework.security.web.authentication.switchuser.SwitchUserFilter">
        <beans:property name="userDetailsService" ref="customUserDetailsService" />
        <beans:property name="targetUrl" value="/manage/index.jsp"/>
    </beans:bean>
    
</beans:beans>

