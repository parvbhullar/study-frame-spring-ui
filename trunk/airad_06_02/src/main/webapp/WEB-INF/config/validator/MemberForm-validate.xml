<?xml version="1.0" encoding="UTF-8"?>
<form className="com.mitian.airad.web.form.MemberForm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="validate-schema.xsd">
     <fields>
        <fieldRule name="email">
            <pattern validator="required">
                <errorTipZH>请输入电子邮箱！</errorTipZH>
            </pattern>
            <pattern validator="email">
                <errorTipZH>电子邮箱格式错误</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="password">
            <pattern validator="required">
                <errorTipZH>请输入密码。</errorTipZH>
            </pattern>
			<pattern validator="password">
                <errorTipZH>密码至少要6位,最多20位！(密码只能包含A-Z，a-z，0-9，连字符-)</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="passwords">
            <pattern validator="required">
                <errorTipZH>请输入确认密码。</errorTipZH>
            </pattern>
        </fieldRule>
		<fieldRule name="coreMemberInfo.mobile">
            <pattern validator="worldmobile">
                <errorTipZH>请填写正确手机号码</errorTipZH>
            </pattern>
    </fieldRule>
        
        <fieldRule name="coreMemberInfo.zip">
            <pattern validator="zipcode">
                <errorTipZH>请填写正确邮政编码</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="coreMemberInfo.qq">
         <range type="length" min="0" max="20">
                <errorTipZH>QQ号码最大长度为20。</errorTipZH>
         </range>
          <pattern validator="qqemail">
                <errorTipZH>QQ号码可以是纯数字，亦可以是EMAIL账号</errorTipZH>
          </pattern>

        </fieldRule>

         <fieldRule name="coreMemberInfo.msn">
         <range type="length" min="0" max="50">
                <errorTipZH>MSN最大长度为50。</errorTipZH>
         </range>

		 <pattern validator="email">
                <errorTipZH>请填写正确的msn账号</errorTipZH>
          </pattern>
        </fieldRule>
         <fieldRule name="coreMemberInfo.phone">
        <range type="length" min="0" max="20">
                <errorTipZH>固定电话最大长度为20。</errorTipZH>
        </range>
         <pattern validator="telephone">
                <errorTipZH>固定电话格式错误</errorTipZH>
         </pattern>
        </fieldRule>
        <fieldRule name="coreMemberInfo.companyName">
      <range type="length" min="0" max="50">
                <errorTipZH>公司名称最大长度为50。</errorTipZH>
         </range>
        </fieldRule>
        <fieldRule name="coreMemberInfo.address">
        <range type="length" min="0" max="50">
                <errorTipZH>通信地址最大长度为50。</errorTipZH>
         </range>
        </fieldRule>
		 <fieldRule name="verifyCode">
            <pattern validator="required">
                <errorTipZH>请输入验证码！</errorTipZH>
            </pattern>
              <range type="length" min="4" max="4">
                <errorTipZH>请输入4位验证码</errorTipZH>
         </range>
        </fieldRule>
       <fieldRule name="newPassword">
            <pattern validator="required">
                <errorTipZH>请输入新密码</errorTipZH>
            </pattern>
			<pattern validator="password">
                <errorTipZH>密码至少要6位,最多20位！(密码只能包含A-Z，a-z，0-9，连字符-)</errorTipZH>
            </pattern>
        </fieldRule>
        <fieldRule name="confirmPassword">
            <pattern validator="required">
                <errorTipZH>请输入确认新密码</errorTipZH>
            </pattern>
        </fieldRule>
    </fields>

    <actions>
        <xcase name="doRegister">
            <field name="email" />
            <field name="password" />
            <field name="passwords" />
            <field name="verifyCode" />
        </xcase>
        <xcase name="doOnceRegister">
            <field name="email" />
            <field name="password" />
            <field name="passwords" />
        </xcase>
        <xcase name="doUpdateLoginPassword">
            <field name="oldPassword" />
            <field name="newPassword" />
            <field name="confirmPassword" />
        </xcase>
        <xcase name="doUpdateMemberInfo">
            <field name="coreMemberInfo.mobile" />
            <field name="coreMemberInfo.address" />
            <field name="coreMemberInfo.zip" />
            <field name="coreMemberInfo.email" />
		   	<field name="coreMemberInfo.msn" />
            <field name="coreMemberInfo.companyName" />
            <field name="coreMemberInfo.address" />
            <field name="coreMemberInfo.phone" />
            <field name="coreMemberInfo.qq" />

        </xcase>
         <xcase name="updateMemberInfo">
            <field name="coreMemberInfo.mobile" />
            <field name="coreMemberInfo.address" />
            <field name="coreMemberInfo.zip" />
            <field name="coreMemberInfo.email" />
           <field name="coreMemberInfo.msn" />
            <field name="coreMemberInfo.companyName" />
            <field name="coreMemberInfo.address" />
            <field name="coreMemberInfo.phone" />
            <field name="coreMemberInfo.qq" />
        </xcase>
        <xcase name="sendResettingPasswordEmail">
            <field name="email" />
        </xcase>

        <xcase name="resettingPassword">
            <field name="password" />
            <field name="passwords" />
        </xcase>

    </actions>
</form>