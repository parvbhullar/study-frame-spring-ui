<?xml version="1.0" encoding="UTF-8"?>
<form className="com.mitian.airad.web.form.AdGroupForm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="validate-schema.xsd">
    
    <fields>
        <fieldRule name="coreAdGroup.adGroupName">
            <pattern validator="required">
                <errorTipZH>请填广告组名称</errorTipZH>
            </pattern>
            <range type="length" min="0" max="50">
                <errorTipZH>广告组名称最大长度为50。</errorTipZH>
            </range>
        </fieldRule>
        <fieldRule name="coreAdGroup.adLoclType">
            <pattern validator="required">
                <errorTipZH>请选择地理位置。</errorTipZH>
            </pattern>
        </fieldRule>
         <fieldRule name="coreAdGroup.adTagSp">
            <pattern validator="required">
                <errorTipZH>请选择平台/设备。</errorTipZH>
            </pattern>
        </fieldRule>
    </fields>
    
    <actions>
        <xcase name="add">
            <field name="coreAdGroup.adGroupName" />
            <field name="coreAdGroup.adLoclType" />
            <field name="coreAdGroup.adTagSp" />
        </xcase>
        <xcase name="edit">
            <field name="coreAdGroup.adGroupName" />
            <field name="coreAdGroup.adLoclType" />
            <field name="coreAdGroup.adTagSp" />
        </xcase>
    </actions>
    
    </form>
