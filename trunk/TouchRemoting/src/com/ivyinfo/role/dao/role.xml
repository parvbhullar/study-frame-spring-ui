<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap>
	<typeAlias alias="roleBean" type="com.ivyinfo.role.bean.RoleBean" />
	<!-- 查找所有的角色 -->
	<select id="findAllRole" resultClass="roleBean">
		<![CDATA[
			SELECT * FROM t_sys_role
		]]>
	</select>
	
	<!-- 新增角色 -->
	<insert id="saveRole" parameterClass="roleBean">
		<![CDATA[
			INSERT INTO t_sys_role(id,name,remark,organizationid,upduserid,timestemp,dirtyflag)
			VALUES(#id#,#name#,#remark#,#organizationid#,#upduserid#,#timestemp#,#dirtyflag#)
		]]>
	</insert>
	
	<!-- 查看角色详细信息 -->
	<select id="findRoleById" parameterClass="int" resultClass="roleBean">
		<![CDATA[
			SELECT * FROM t_sys_role WHERE ID=#id#
		]]>
	</select>
	
	<!-- 修改角色信息 -->
	<update id="updateRole" parameterClass="roleBean">
		<![CDATA[
			UPDATE t_sys_role SET 
			name=#name#,remark=#remark#,organizationid=#organizationid#,upduserid=#upduserid#,timestemp=#timestemp#,dirtyflag=#dirtyflag# 
			WHERE id=#id#
		]]>
	</update>
	
	<!-- 删除角色信息 -->
	<delete id="deleteRole" parameterClass="int">
		<![CDATA[
			DELETE FROM t_sys_role WHERE ID=#id#
		]]>
	</delete>
	
</sqlMap>