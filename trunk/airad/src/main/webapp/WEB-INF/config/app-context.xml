		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:property-placeholder location="classpath:environment.properties"/>
	<bean id="SpringContextUtils" class="com.mitian.airad.common.utils.SpringContextUtils" scope="singleton" />
	<import resource="app-data-access.xml"/>
	<import resource="app-service.xml"/>
  <import resource="validator.xml"/>
  <import resource="app-security.xml"/>
  <import resource="remoting-client.xml"/>
</beans>