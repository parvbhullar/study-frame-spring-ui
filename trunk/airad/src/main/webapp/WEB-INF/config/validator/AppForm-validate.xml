<?xml version="1.0" encoding="UTF-8"?>
<form className="com.mitian.airad.web.form.AppForm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="validate-schema.xsd">
    <fields>
        <fieldRule name="app.appName">
            <range type="length" min="0" max="100">
                <errorTipZH>应用名称最大长度为100。</errorTipZH>
             </range>
            <pattern validator="required">
                <errorTipZH>请填写应用名称。</errorTipZH>
            </pattern>
        </fieldRule> 
        <fieldRule name="app.appDesc">
             <range type="length" min="0" max="200">
                <errorTipZH>描述最大长度为200。</errorTipZH>
             </range>
            <pattern validator="required">
                <errorTipZH>请填写描述。</errorTipZH>
            </pattern>
        </fieldRule>
         <fieldRule name="app.downUrl">
            <range type="length" min="0" max="100">
                <errorTipZH>url地址最大长度为100。</errorTipZH>
             </range>
            <pattern validator="url">
                <errorTipZH>请填写正确的url地址</errorTipZH>
            </pattern>
        </fieldRule>
    </fields>
    <actions>
        <xcase name="doAdd">
            <field name="app.appName" />
            <field name="app.appDesc" />
            <field name="app.downUrl" />
        </xcase>
        <xcase name="doUpdate">
            <field name="app.appName" />
            <field name="app.appDesc" />
             <field name="app.downUrl" />
        </xcase>
        <xcase name="doAddBegin">
            <field name="app.appName" />
            <field name="app.appDesc" />
             <field name="app.downUrl" />
        </xcase>
    </actions>
</form>